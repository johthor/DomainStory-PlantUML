@startuml
'!include <DomainStory/domainStory>
'!include https://raw.githubusercontent.com/johthor/DomainStory-PlantUML/main/domainStory.puml
!include ../domainStory.puml

' Contents inspired by https://domainstorytelling.org/quick-start-guide#putting-it-all-together

introduce(a10, Person("A"))
introduce(w10, Document("w"))
activity(+, a10, works on, w10)

introduce(a11, Person("A"))
activity(|, a11, works on, Document: w, $note=vcreated dynamically)

introduce(a20, Person("A"))
introduce(w20, Document("w"))
introduce(v20, Document("v"))
activity(+, a20, works on, w20, using, v20)

introduce(a21, Person("A"))
activity(|, a21, works on, Document: w, using, Document: v, $note=vcreated dynamically, $targetNote=vcreated dynamically)

introduce(xa20, Person("A"))
introduce(xw20, Document("w"))
introduce(xv20, Document("v"))
introduce(xu20, Document("u"))
introduce(xt20, Document("t"))
activity(2', xa20, works on, xw20, using, xv20)
activity(., xv20, and, xu20, as well as, xt20)

introduce(xa21, Person("A"))
introduce(xv21, Document("v"))
activity(2', xa21, works on, Document: w, using, xv21, $note=vcreated dynamically)
activity(., xv21, and, Document: u, as well as, Document: t, $note=vcreated dynamically, $targetNote=vcreated dynamically)

introduce(a30, Person("A"))
introduce(b30, Person("B"))
introduce(w30, Document("w"))
activity(+, a30, hands over, w30, to, b30)

introduce(a31, Person("A"))
introduce(b31, Person("B"))
activity(|, a31, hands over, Document: w, to, b31, $note=vcreated dynamically)

introduce(a40, Person("A"))
introduce(b40, Person("B"))
introduce(c40, Person("C"))
introduce(w40, Document("w"))
activity(+, a40, hands over, w40, to, b40)
activity(., w40, and, c40)

introduce(a41, Person("A"))
introduce(b41, Person("B"))
introduce(c41, Person("C"))
activity(|, a41, hands over, Document:w, to, b41, $note=vcreated dynamically)
activity(., $lastNodeConnected, and, c41)

introduce(a50, Person("A"))
introduce(b50, Person("B"))
introduce(w50, Document("w"))
activity(+, a50, collaborates on, w50)
activity(|, b50, collaborates on, w50, $objectArr = "<--")

introduce(a51, Person("A"))
introduce(b51, Person("B"))
activity(|, a51, collaborates on, Document: w, $note=vcreated dynamically)
activity(|, b51, collaborates on, $lastNodeConnected, $objectArr = "<--")
@enduml
