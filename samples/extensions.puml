@startuml
'!include <DomainStory/domainStory>
!include ../domainStory.puml
'!include https://raw.githubusercontent.com/johthor/DomainStory-PlantUML/main/domainStory.puml

' Actors
!include <material/store>

!unquoted function Merchant($label, $tag = "", $note = "", $shape = $Actor_Shape, $scale = $Actor_IconScale, $color = $Actor_IconColor, $background = "")
    !return Actor("Merchant", "$ma_store", $label, $tag, $note, $shape, $scale, $color, $background)
!endfunction

!include <material/crown>

!unquoted function Customer($label, $tag = "", $note = "", $shape = $Actor_Shape, $scale = $Actor_IconScale, $color = $Actor_IconColor, $background = "")
    !return Actor("Customer", "$ma_crown", $label, $tag, $note, $shape, $scale, $color, $background)
!endfunction

!include <material/settings_box>

!unquoted function Process($label, $tag = "", $note = "", $shape = $Actor_Shape, $scale = $Actor_IconScale, $color = $Actor_IconColor, $background = "")
    !return Actor("Process", "$ma_settings_box", $label, $tag, $note, $shape, $scale, $color, $background)
!endfunction

Boundary(actors) {
    introduce(Merchant(Merchant))
    introduce(Customer(Customer))
    introduce(Process(Process))
}
@enduml
